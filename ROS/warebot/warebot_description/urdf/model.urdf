<?xml version="1.0" ?>
<robot name="warebot">
  <!-- Chassis + caster wheels -->
	<link name="chassis">
		<inertial>
      <mass value="60"/>
      	<origin rpy="0 0 0" xyz="0 0 0.1"/>
      	<!-- x=0.5 y=0.5 z=0.207-->
      	<inertia ixx="1.215" ixy="0.0" ixz="0.0" iyy="1.215" iyz="0.0" izz="2.075"/>
    </inertial>

    <collision name="chassis_collision">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://warebot_description/meshes/WareBot_Chassis.dae" scale="1.0 1.0 1.0"/>
      </geometry>
    </collision>

    <collision name="caster_collision_back">
      <origin rpy="0 0 0" xyz="-0.24 0 -0.074"/>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>

    <collision name="caster_collision_front">
      <origin rpy="0 0 0" xyz="0.24 0 -0.074"/>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>

    <visual name="chassis_visual">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://warebot_description/meshes/WareBot_Chassis.dae" scale="1.0 1.0 1.0"/>
      </geometry>
    </visual>

    <visual name="caster_visual_back">
      <origin rpy="0 0 0" xyz="-0.24 0 -0.06"/>
      <geometry>
        <mesh filename="package://warebot_description/meshes/WareBot_Caster.dae" scale="1.0 1.0 1.0"/>
      </geometry>
    </visual>

    <visual name="caster_visual_front">
      <origin rpy="0 0 -3.14158" xyz="0.24 0 -0.04"/>
      <geometry>
        <mesh filename="package://warebot_description/meshes/WareBot_Caster.dae" scale="1.0 1.0 1.0"/>
      </geometry>
    </visual>
  </link>
  <!-- Left wheel -->
  <link name="wheel_left">
    <inertial>
      <mass value="5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <!-- x=0.165 y=0.05 z=0.165-->
      <inertia ixx="0.0123" ixy="0" ixz="0" iyy="0.0226" iyz="0" izz="0.0123"/>
    </inertial>

    <collision name="wheel_left_collision">
      <origin rpy="1.5707 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.05" radius="0.0835"/>
        </geometry>
    </collision>

    <visual name="wheel_left_visual">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
          <mesh filename="package://warebot_description/meshes/WareBot_Wheel.dae" scale="1.0 1.0 1.0"/>
      </geometry>
    </visual>
  </link>
  <!-- Right wheel -->
  <link name="wheel_right">
    <inertial>
      <mass value="5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.0123" ixy="0" ixz="0" iyy="0.0226" iyz="0" izz="0.0123"/>
    </inertial>

    <collision name="warebot_wheel_right_collision">
      <origin rpy="1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.0835"/>
      </geometry>
    </collision>

    <visual name="warebot_wheel_right_visual">
      <origin rpy="0 0 3.14" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://warebot_description/meshes/WareBot_Wheel.dae" scale="1.0 1.0 1.0"/>
      </geometry>
    </visual>
  </link>
  <!-- LIDAR -->
  <link name="lidar_generic">
    <inertial>
      <mass value="0.5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>

  <!-- Joints -->
	<joint name="lidar_base" type="fixed">
		<parent link="chassis"/>
		<child link="lidar_generic"/>
		<origin rpy="0 0 0" xyz="0.15 0 0.09"/>
		<axis xyz="0 0 1"/>
	</joint>

	<joint name="wheel_left_hinge" type="continuous">
		<parent link="chassis"/>
		<child link="wheel_left"/>
		<origin rpy="0 0 0" xyz="0.009 0.27 -0.0308"/>
		<axis xyz="0 1 0"/>
		<limit effort="90" velocity="20"/>
	</joint>

	<joint name="wheel_right_hinge" type="continuous">
		<parent link="chassis"/>
		<child link="wheel_right"/>
    	<origin rpy="0 0 0" xyz="-0.009 -0.27 -0.0308"/>
    	<axis xyz="0 1 0"/>
    	<limit effort="90" velocity="20"/>
  </joint>
  <!-- Differential drive controller -->
  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
      <alwaysOn>true</alwaysOn>
      <updateRate>20</updateRate>
      <legacyMode>false</legacyMode>
      <leftJoint>wheel_left_hinge</leftJoint>
      <rightJoint>wheel_right_hinge</rightJoint>
      <wheelSeparation>0.167</wheelSeparation>
      <wheelDiameter>0.15</wheelDiameter>
      <torque>20</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>chassis</robotBaseFrame>
      <publishWheelTF>false</publishWheelTF>
      <publishWheelJointState>false</publishWheelJointState>
      <rosDebugLevel>na</rosDebugLevel>
      <wheelAcceleration>0</wheelAcceleration>
      <wheelTorque>5</wheelTorque>
      <odometrySource>world</odometrySource>
      <publishTf>1</publishTf>
      <publishOdomTF>true</publishOdomTF>
    </plugin>
  </gazebo>
  <!-- LIDAR sensor -->
  <gazebo reference = "lidar_generic">
    <sensor name="lidar_sensor" type="ray">
         <pose>0 0 0 0 0 0</pose>
         <always_on>1</always_on>
         <update_rate>20</update_rate>
         <visualize>true</visualize>
         <ray>
          <scan>
            <horizontal>
              <samples>720</samples>
              <resolution>1</resolution>
              <min_angle>-3.14</min_angle>
              <max_angle>3.14</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.15</min>
            <max>6</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>
        <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
          <topicName>/warebot/laser/scan</topicName>
          <frameName>lidar_generic</frameName>
        </plugin>
      </sensor>
  </gazebo>
</robot>